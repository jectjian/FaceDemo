<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/main_back_image"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/t4" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/main_check"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="1dp"
                android:background="@drawable/button_select_bg"
                android:text="Detect " />

            <Button
                android:id="@+id/main_select_camera"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="1dp"
                android:background="@drawable/button_select_bg"
                android:text="相机拍照 " />

            <Button
                android:id="@+id/main_select_pic"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="1dp"
                android:background="@drawable/button_select_bg"
                android:text="图库选图 " />
        </LinearLayout>
    </LinearLayout>

    <ProgressBar 
        android:id="@+id/main_progress"
        android:layout_height="100dp"
        android:layout_width="100dp"
        android:layout_centerInParent="true"
        android:visibility="gone"/>
    
    <TextView 
        android:id="@+id/main_age"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="#FFF"
        android:textSize="22sp"
        android:text="123"
        android:background="@drawable/hint"
        android:visibility="invisible"
        android:drawableLeft="@drawable/male"
        android:gravity="center"/>
</RelativeLayout>